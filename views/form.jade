extends layout
block content
    .row
        .col-md-6.col-md-offset-3
            form(method='POST' action='/user/login')
                div.form-group
                    label(for='email') email:                
                    input#email.form-controle(type='text' placeholder='email' name='email')
                div.form-group
                    label(for='password') password:
                    input#password.form-controle(type='text' placeholder='password' name='password')
                button.btn.btn-primary(type='submit') login
            a.btn.btn-secondary(href='/user/register') register